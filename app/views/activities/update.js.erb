$.toast({
  heading: 'Activity updated successfully',
  text: '<%= @activity.name %>',
  showHideTransition: 'plain',
  icon: 'success'
})

$('#activity-<%= @activity.id %>').remove();

if($('#activity-list') != null){
  if(itsANewDate()){
    $('#activity-list').append("<%= j render partial: 'activities/grouped_activity_list', locals: { date: @activity.date, activities: [@activity]} %>");
  }
  else {
    $('#activity-cards-for-<%= @activity.date.to_i %>').append("<%= j render partial: 'activities/activity_card', locals: { activity: @activity } %>");
  }
}

function itsANewDate(){
  if($('#activities-for-<%= @activity.date.to_i %>') == null || $('#activities-for-<%= @activity.date.to_i %>').length == 0){
    return true;
  }
  else{
    return false
  }
}