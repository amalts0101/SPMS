<div class="container container-wide">

    <!-- content -->
    <div class="content " role="main">
        <!-- row -->
        <div class="row">
            <div class="col-sm-8">
                <!-- Website Menu -->
                <div id="topmenu">
                    <ul class="dropdown clearfix boxed">
                        <li class="menu-level-0"><a href="forms.html"><i class="icon-menu"></i><span>projects</span><sup class="note">3</sup></a></li>
                        <li class="menu-level-0"><a href='activities/index'><i class="icon-menu icon-menu2"></i><span>activities</span></a> </li>
                        <li class="menu-level-0"><a href="#"><i class="icon-menu icon-menu3"></i><span>sheets</span></a>
                            <ul class="submenu-1">
                                <li class="menu-level-1"><a href="#">Web design</a></li>
                                <li class="menu-level-1"><a href="#">User interface</a></li>
                                <li class="menu-level-1"><a href="#">Social media</a>
                                    <ul class="submenu-2">
                                        <li class="menu-level-2"><a href="#">Gallery images</a></li>
                                        <li class="menu-level-2"><a href="#">Fine Slider</a></li>
                                        <li class="menu-level-2"><a href="#">Video in header</a></li>
                                        <li class="menu-level-2"><a href="#">Video Slider</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </li>
                        <li class="menu-level-0"><a href="#"><i class="icon-menu icon-menu4"></i><span>settings</span></a></li>
                    </ul>
                </div>
                <!--/ Website Menu -->

                <!-- row level 2 -->
                <div class="row">
                    <div class="col-sm-6">
                        <!-- Widget Weather -->
                        <div class="widget-container widget-trade boxed">
                            <div class="widget-title">
                                <span class="trade-rate trade-rate-up">634. 39</span>
                                <span class="trade-rate-change">+2.18 (3.71%)</span>
                            </div>
                        </div>
                        <!--/ Widget Weather -->

                        <!-- Widget Profile -->
                        <div class="widget-container widget_profile widget_categories boxed">
                            <div class="widget-title">
                                <div class="avatar" style="width: 70px;height: 70px;"><img src="assets/sheets.jpg" alt="" style="width: 54px;height: 54px;" /></div>
                                <h5>Recent Activity</h5>
                                <span class="subtitle">15,323 followers</span>
                            </div>
                            <div class="inner">
                                <ul>
                                    <li><a href="#"><i class="ico-cat ico-cat1"></i><span>Database Design</span></a></li>
                                    <li class="current-menu-item"><a href="#"><i class="ico-cat ico-cat2"></i><span>UI Design</span></a></li>
                                    <li><a href="#"><i class="ico-cat ico-cat3"></i><span>Sync Ups</span></a></li>
                                    <li><a href="#"><i class="ico-cat ico-cat4"></i><span>Demo</span></a></li>
                                </ul>
                            </div>
                        </div>
                        <!--/ Widget Profile -->
                    </div>

                    <div class="col-sm-6">
                        <!-- Contact form -->
                        <div class="add-comment styled boxed" id="addcomments">
                            <div class="comment-form">
                                <%= form_for Activity.new do |form| %>
                                    <div class="form-inner">
                                        <div class="field_select">
                                            <label class="label_title"><i class="icon-menu icon-menu6"></i>ADD ACTIVTIY</label>
                                        </div>
                                        <div class="field_text">
                                            <%= form.select(:project_id, Project.pluck(:project_name, :id)) %>
                                        </div>
                                    
                                        
                                        <div class="field_text input_date adv_block">
                                           <input type="text" name="filter_date_in" class="inputField inputDate" value="Select Date" onfocus="if (this.value == 'Check in') {this.value = '';}" onblur="if (this.value == '') {this.value = 'Check in';}" id="filter_date_in">
                                           <span class="input_icon"></span>
                                       </div>
                                        <div class="field_text"> 
                                            <%= form.text_field :hours, placeholder: 'Add hours'%>
                                        </div>
                                        
                                        <div class="clear"></div>
                                        <div class="field_text field_textarea">
                                            <%= form.text_field :name, placeholder: 'Add Activity'%>
                                        </div>
                                        <div class="clear"></div>
                                    </div>

                                    <div class="rowSubmit clearfix">
                                        <div class="input_styled checklist">
                                            <div class="rowCheckbox checkbox-filled"><input name="save" type="checkbox" checked id="save" value="save"><label for="save" class="checked">Secondary</label></div>
                                        </div>
                                        <span class="btn"><input type="submit" id="send" value="Save" /></span>
                                    </div>
                                    
                                <%end%>
                            </div>
                        </div>
                        <!--/ Contact form -->

                        <!-- widget calendar-->
                        <div class="widget-container widget_calendar boxed styled">
                            <div class="inner">
                                <input type="text" name="date_departure" class="inputField" value="" id="date_departure">
                                <script>
                                    // <![CDATA[
                                    jQuery(document).ready(function($) {
                                        var daysRange = 5;

                                        function assignCalendar(id){
                                            $('<div class="calendar" />')
                                                    .insertAfter( $(id) )
                                                    .multiDatesPicker({
                                                        dateFormat: 'yy-mm-dd',
                                                        minDate: new Date(),
                                                        maxDate: '+1y',
                                                        altField: id,
                                                        firstDay: 1,
                                                        showOtherMonths: true
                                                    }).prev().hide();
                                        }

                                        assignCalendar('#date_departure');
                                    });
                                    // ]]>
                                </script>

                            </div>
                        </div>
                        <!--/ widget calendar-->
                    </div>
                </div>
                <!--/ row level 2 -->
            </div>

            <div class="col-sm-4">
                <!-- Avatar Placeholder -->
                <div class="widget-container widget_avatar boxed">
                    <div class="avatar-image"><img src="assets/temp/avatar-image.jpg" alt="" /></div>
                    <div class="inner clearfix">
                        <div class="avatar"><img src="assets/temp/avatar.png" alt="" /></div>
                        <h5>John Raymons</h5>
                        <span class="subtitle">Your talent amazes! This is awesome. Excited to see the final product.</span>
                    </div>
                </div>

                 <!-- Widget Stats -->
                <div class="tabs_framed styled widget-stats">
                    <ul class="tabs clearfix">
                        <li class="active"><a href="#diagram" data-toggle="tab">Diagram Stats</a></li>
                        <li><a href="#month" data-toggle="tab">Month Report</a></li>
                    </ul>

                    <div class="tab-content boxed clearfix">
                        <div class="tab-pane fade in active" id="diagram">
                            <h6>Data Transfer</h6>
                            <div id="donutchart" class="donutchart"></div>
                            <ul class="stats-data clearfix">
                                <li><a href="#"><span>audio</span><strong>55%</strong></a></li>
                                <li class="red"><a href="#"><span>video</span><strong>23%</strong></a></li>
                                <li class="yellow"><a href="#"><span>photo</span><strong>17%</strong></a></li>
                            </ul>
                        </div>
                        <div class="tab-pane fade" id="month">
                            <h6>Data chart</h6>
                            <div id="columnchart" class="columnchart"></div>
                            <ul class="stats-data clearfix">
                                <li><a href="#"><span>audio</span><strong>50%</strong></a></li>
                                <li class="red"><a href="#"><span>video</span><strong>26%</strong></a></li>
                                <li class="yellow"><a href="#"><span>photo</span><strong>18%</strong></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <!--/ Widget Stats -->
            </div>
        </div>
        <!--/ row -->

    </div>
    <!--/ content -->
</div>
<!--/ container -->
<script>
   jQuery(document).ready(function($) {
       $("#filter_date_in").datepicker({
           dateFormat: 'MM dd, yy',
           minDate: 0,
           showOtherMonths: true
       });
   });
</script>